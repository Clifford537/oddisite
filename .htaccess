RewriteEngine On
RewriteBase /

# Route for dashboard.php
RewriteCond %{REQUEST_FILENAME} !-d
RewriteCond %{REQUEST_FILENAME}.php -f
RewriteRule ^dashboard/?$ dashboard.php [L]

# Route for dbconnection.php (if needed)
# RewriteCond %{REQUEST_FILENAME} !-d
# RewriteCond %{REQUEST_FILENAME}.php -f
# RewriteRule ^dbconnection/?$ dbconnection.php [L]

# Route for index.php
RewriteCond %{REQUEST_FILENAME} !-d
RewriteCond %{REQUEST_FILENAME}.php -f
RewriteRule ^index/?$ index.php [L]

# Route for login.php
RewriteCond %{REQUEST_FILENAME} !-d
RewriteCond %{REQUEST_FILENAME}.php -f
RewriteRule ^login/?$ login.php [L]

# Route for login_process.php
RewriteCond %{REQUEST_FILENAME} !-d
RewriteCond %{REQUEST_FILENAME}.php -f
RewriteRule ^login_process/?$ login_process.php [L]

# Route for logout.php
RewriteCond %{REQUEST_FILENAME} !-d
RewriteCond %{REQUEST_FILENAME}.php -f
RewriteRule ^logout/?$ logout.php [L]

# Route for match_add.php
RewriteCond %{REQUEST_FILENAME} !-d
RewriteCond %{REQUEST_FILENAME}.php -f
RewriteRule ^match_add/?$ match_add.php [L]

# Route for match_add_form.php
RewriteCond %{REQUEST_FILENAME} !-d
RewriteCond %{REQUEST_FILENAME}.php -f
RewriteRule ^match_add_form/?$ match_add_form.php [L]

# Add more rules for other PHP files as needed

# Redirect requests for PHP files with .php extension to extensionless URLs
RewriteCond %{THE_REQUEST} \s/+(.+)\.php [NC]
RewriteRule ^ /%1 [R=301,L]

# Internally rewrite extensionless URLs to PHP files
RewriteCond %{REQUEST_FILENAME}.php -f
RewriteRule ^([^/.]+)/?$ $1.php [L]
